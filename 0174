WITH DataSource AS (
  SELECT
    InterfaceId,
    ErrorClassification,
    IIF(
      ISNULL(OrderSource, '') = '', 
      NULL,
      CONCAT(SUBSTRING(OrderSource, 1, 2), SUBSTRING(CONVERT(VARCHAR(10), IF0174Seq), 3, 8))
    ) AS OhiId,
    Status,
    IIF(
      ISNULL(OrderSource, '') = '', 
      '',
      CONCAT(SUBSTRING(OrderSource, 1, 3), IF0174Seq)
    ) AS OrigSysDocumentRef,
    CONVERT(INT, NULLIF(OrderSource, '')) AS OrderSource,
    CustomerPoNumber,
    CustomerNumber,
    ShipmentPriorityCode,
    ShipToOrgCode,
    OrganizationCode,
    SecondaryInventoryName,
    IIF(
      ISNULL(OrderSource, ''), 
      NULL,
      CONCAT(SUBSTRING(OrderSource, 1, 2), SUBSTRING(CONVERT(VARCHAR(10), IF0174Seq), 3, 8))
    ) AS OliId,
    OrigSysLineRef,
    InventoryItemSegment1,
    OrderedQuantity,
    InvoiceToOrgCode,
    ErrorMessage,
    SalesTableOIFRecId
  FROM earth_dp_SpoonsOrderIF_LS_IF_0174_TempWithSeq
),
GroupedOhiId AS (
  SELECT 
    *,
    ROW_NUMBER() OVER (PARTITION BY OrderSource, CustomerPoNumber ORDER BY OrigSysLineRef) AS RowNum
  FROM DataSource
),
NumberedOhiId AS (
  SELECT
    *,
    ROW_NUMBER() OVER (PARTITION BY OrderSource, CustomerPoNumber ORDER BY OrigSysLineRef) - 1 AS GroupRowNum
  FROM GroupedOhiId
)
SELECT
  CustomerNumber,
  CustomerPoNumber,
  ErrorClassification,
  ErrorMessage,
  InterfaceId,
  InventoryItemSegment1,
  InvoiceToOrgCode,
  CONCAT(SUBSTRING(OhiId, 1, 2), RIGHT('000' + CAST(GroupRowNum AS VARCHAR(3)), 3)) AS OhiId,
  OliId,
  OrderSource,
  OrderedQuantity,
  OrganizationCode,
  OrigSysDocumentRef,
  OrigSysLineRef,
  SecondaryInventoryName,
  ShipToOrgCode,
  ShipmentPriorityCode,
  SalesTableOIFRecId,
  Status
FROM NumberedOhiId
ORDER BY OrigSysLineRef;
