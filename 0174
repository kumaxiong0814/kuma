WITH DataSource AS (
  SELECT
    *,
    ROW_NUMBER() OVER (PARTITION BY OrderSource, CustomerPoNumber ORDER BY OrigSysLineRef) AS RowNum,
    ROW_NUMBER() OVER (ORDER BY OrigSysLineRef) AS GlobalRowNum -- 添加全局行号，用于确保连续递增的OhiId
  FROM (
    SELECT
      '0174' AS InterfaceId,
      '0' AS ErrorClassification,
      IIF(
        ISNULL(OrderSource, '') = '',
        OrderSource,
        CONCAT(SUBSTRING(OrderSource, 1, 2), SUBSTRING(CONVERT(VARCHAR(10), IF0174Seq), 3, 8))
      ) AS OhiId,
      '0' AS Status,
      IIF(
        ISNULL(OrderSource, '') = '',
        OrderSource,
        CONCAT(SUBSTRING(OrderSource, 1, 3), IF0174Seq)
      ) AS OrigSysDocumentRef,
      CONVERT(INT, NULLIF(OrderSource, '')) AS OrderSource,
      CustomerPoNumber,
      CustomerNumber,
      ShipmentPriorityCode,
      ShipToOrgCode,
      OrganizationCode,
      SecondaryInventoryName,
      IIF(
        ISNULL(OrderSource, '') = '',
        OrderSource,
        CONCAT(SUBSTRING(OrderSource, 1, 2), SUBSTRING(CONVERT(VARCHAR(10), IF0174Seq), 3, 8))
      ) AS OliId,
      OrigSysLineRef,
      InventoryItemSegment1,
      OrderedQuantity,
      InvoiceToOrgCode,
      '' As ErrorMessage,
      '' AS SalesTableOIFRecId
    FROM earth_dp_SpoonsOrderIF_LS_IF_0174_TempWithSeq
  ) AS SubQuery
),
GroupedOhiId AS (
  SELECT
    *,
    MIN(OhiId) OVER (PARTITION BY OrderSource, CustomerPoNumber) AS MinOhiId,
    MIN(GlobalRowNum) OVER (PARTITION BY OrderSource, CustomerPoNumber) AS MinGlobalRowNum
  FROM DataSource
)
SELECT
  CustomerNumber,
  CustomerPoNumber,
  ErrorClassification,
  ErrorMessage,
  InterfaceId,
  InventoryItemSegment1,
  InvoiceToOrgCode,
  CONCAT(MinOhiId, ROW_NUMBER() OVER (PARTITION BY OrderSource, CustomerPoNumber ORDER BY MinGlobalRowNum)) AS OhiId, -- 使用全局行号确保连续递增的OhiId
  OliId,
  OrderSource,
  OrderedQuantity,
  OrganizationCode,
  OrigSysDocumentRef,
  OrigSysLineRef,
  SecondaryInventoryName,
  ShipToOrgCode,
  ShipmentPriorityCode,
  SalesTableOIFRecId,
  Status
FROM GroupedOhiId
ORDER BY OrigSysLineRef;
