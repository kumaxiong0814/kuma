WITH Original AS
(
  SELECT
    *,
    ROW_NUMBER() OVER (PARTITION BY OrderSource, CustomerPoNumber ORDER BY OrigSysLineRef) AS RowNum
  FROM earth_dp_SpoonsOrderIF_LS_IF_0174_TempWithSeq
),
Updated AS (
  SELECT
    InterfaceId,
    ErrorClassification,
    IIF(
      ISNULL(OrderSource, '') = '',
      OrderSource,
      CONCAT(SUBSTRING(OrderSource, 1, 2), SUBSTRING(CONVERT(VARCHAR(10), IF0174Seq), 3, 8))
    ) AS OhiId,
    '0' AS Status,
    IIF(
      ISNULL(OrderSource, '') = '',
      OrderSource,
      CONCAT(SUBSTRING(OrderSource, 1, 3), IF0174Seq)
    ) AS OrigSysDocumentRef,
    CONVERT(INT, NULLIF(OrderSource, '')) AS OrderSource,
    CustomerPoNumber,
    CustomerNumber,
    ShipmentPriorityCode,
    ShipToOrgCode,
    OrganizationCode,
    IIF(
      ISNULL(OrderSource, '') = '',
      OrderSource,
      CONCAT(SUBSTRING(OrderSource, 1, 2), SUBSTRING(CONVERT(VARCHAR(10), IF0174Seq), 3, 8))
    ) AS OliId,
    OrigSysLineRef,
    InventoryItemSegment1,
    OrderedQuantity,
    InvoiceToOrgCode,
    '' As ErrorMessage,
    '' AS SalesTableOIFRecId
  FROM Original
),
Grouped AS (
  SELECT
    *,
    MIN(OrigSysLineRef) OVER (PARTITION BY OrderSource, CustomerPoNumber) AS MinOrigSysLineRef
  FROM Updated
)
SELECT
  CustomerNumber,
  CustomerPoNumber,
  ErrorClassification,
  ErrorMessage,
  InterfaceId,
  InventoryItemSegment1,
  InvoiceToOrgCode,
  CONCAT(OrderSource, ROW_NUMBER() OVER (PARTITION BY OrderSource, CustomerPoNumber ORDER BY OrigSysLineRef) + (OrigSysLineRef - MinOrigSysLineRef)) AS OhiId,
  OliId,
  OrderSource,
  OrderedQuantity,
  OrganizationCode,
  OrigSysDocumentRef,
  OrigSysLineRef,
  SecondaryInventoryName,
  ShipToOrgCode,
  ShipmentPriorityCode,
  SalesTableOIFRecId,
  Status
FROM Grouped
ORDER BY OrigSysLineRef;
